<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_film_dictionary"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_green"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/text_film_dictionary"
        android:textSize="@dimen/sp_30"
        app:layout_constraintEnd_toStartOf="@+id/image_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_green"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_film_dictionary"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_home"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_film_dictionary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_film_dictionary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_home" />

    <TextView
        android:id="@+id/text_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_300"
        android:layout_marginRight="@dimen/dp_300"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/text_genres"
        android:textSize="@dimen/sp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="
        @+id/recyclerView_film_dictionary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_film_genres"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_160"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_genres" />

    <TextView
        android:id="@+id/textView_upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_265"
        android:layout_marginRight="@dimen/dp_265"
        android:text="@string/text_upcoming"
        android:textSize="@dimen/sp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_film_genres" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_UpComing"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_160"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_upcoming" />

</androidx.constraintlayout.widget.ConstraintLayout>
